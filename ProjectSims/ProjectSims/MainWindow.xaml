        <Button Content="Owner" Click="Owner_Click" HorizontalAlignment="Left" Margin="48,79,0,0" VerticalAlignment="Top" Height="54" Width="133" FontSize="18" FontWeight="Bold" />


        <Label Content="Username:" HorizontalAlignment="Left" Margin="297,130,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="297,0,0,0" VerticalAlignment="Center" Width="85" FontSize="16"/>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Left" Margin="400,130,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="131" Height="31" FontSize="16"/>
