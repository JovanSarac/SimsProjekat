        xmlns:local="clr-namespace:ProjectSims"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Button Content="Guest2" HorizontalAlignment="Left" Margin="628,267,0,0" VerticalAlignment="Top" Height="48" Width="133" FontSize="18" FontWeight="Bold" Click="Guest2_Click" />
        <Button Click="Guide" Content="Guide" HorizontalAlignment="Left" Margin="48,260,0,0" VerticalAlignment="Top" Height="48" Width="133" FontSize="18" FontWeight="Bold" />
