<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fa="http://schemas.fontawesome.io/icons/">

    <fa:ImageAwesome Icon="PaintBrush" x:Key="PaintIcon" Foreground="#FF687EA7" Margin="5"/>
    <fa:ImageAwesome Icon="Language" x:Key="LanguageIcon" Foreground="#FF687EA7" Margin="5"/>
    <fa:ImageAwesome Icon="BellOutline" x:Key="NotificationsIcon" Foreground="#FF687EA7" Margin="5"/>

    <fa:ImageAwesome Icon="PaintBrush" x:Key="PaintIconReservation" Foreground="#FF687EA7" Margin="5"/>
    <fa:ImageAwesome Icon="Language" x:Key="LanguageIconReservation" Foreground="#FF687EA7" Margin="5"/>
    <fa:ImageAwesome Icon="BellOutline" x:Key="NotificationsIconReservation" Foreground="#FF687EA7" Margin="5"/>

    <fa:ImageAwesome Icon="PaintBrush" x:Key="PaintIconRatings" Foreground="#FF687EA7" Margin="10"/>
    <fa:ImageAwesome Icon="Language" x:Key="LanguageIconRatings" Foreground="#FF687EA7" Margin="10"/>
    <fa:ImageAwesome Icon="BellOutline" x:Key="NotificationsIconRatings" Foreground="#FF687EA7" Margin="10"/>

    <fa:ImageAwesome Icon="PaintBrush" x:Key="PaintIconProfile" Foreground="#FF687EA7" Margin="10"/>
    <fa:ImageAwesome Icon="Language" x:Key="LanguageIconProfile" Foreground="#FF687EA7" Margin="10"/>
    <fa:ImageAwesome Icon="BellOutline" x:Key="NotificationsIconProfile" Foreground="#FF687EA7" Margin="10"/>

    <fa:ImageAwesome Icon="PaintBrush" x:Key="PaintIconAnywhere" Foreground="#FF687EA7" Margin="10"/>
    <fa:ImageAwesome Icon="Language" x:Key="LanguageIconAnywhere" Foreground="#FF687EA7" Margin="10"/>
    <fa:ImageAwesome Icon="BellOutline" x:Key="NotificationsIconAnywhere" Foreground="#FF687EA7" Margin="10"/>

    <fa:ImageAwesome Icon="PaintBrush" x:Key="PaintIconForum" Foreground="#FF687EA7" Margin="10"/>
    <fa:ImageAwesome Icon="Language" x:Key="LanguageIconForum" Foreground="#FF687EA7" Margin="10"/>
    <fa:ImageAwesome Icon="BellOutline" x:Key="NotificationsIconForum" Foreground="#FF687EA7" Margin="10"/>

    <fa:ImageAwesome Icon="PaintBrush" x:Key="PaintIconMyReservations" Foreground="#FF687EA7" Margin="5"/>
    <fa:ImageAwesome Icon="Language" x:Key="LanguageIconMyReservations" Foreground="#FF687EA7" Margin="5"/>
    <fa:ImageAwesome Icon="BellOutline" x:Key="NotificationsIconMyReservations" Foreground="#FF687EA7" Margin="5"/>

    <fa:ImageAwesome Icon="FilePdfOutline" x:Key="FirstReport" Foreground="#FF687EA7" Margin="0,10,0,10"/>
    <fa:ImageAwesome Icon="FilePdfOutline" x:Key="SecondReport" Foreground="#FF687EA7" Margin="0,10,0,10"/>

    <fa:ImageAwesome Icon="QuestionCircle" x:Key="QuestionIcon" Foreground="#FF687EA7" Margin="0,10,0,0"/>
    
    <fa:ImageAwesome Icon="WindowMinimize" x:Key="MainWindowMinimizeIcon"  Width="10" HorizontalAlignment="Center" Foreground="#FF687EA7"/>
    <fa:ImageAwesome Icon="WindowMaximize" x:Key="MainWindowMaximizeIcon"  Width="10" HorizontalAlignment="Center" Foreground="#FF687EA7"/>
    <fa:ImageAwesome Icon="WindowRestore" x:Key="MainWindowRestoreIcon" Width="15" Foreground="#FF687EA7"/>
    <fa:ImageAwesome Icon="WindowClose" x:Key="MainWindowCloseIcon" Width="20" Foreground="#FF687EA7"/>

    <fa:ImageAwesome Icon="WindowClose" x:Key="RatingsCloseIcon" Width="20" Foreground="#FF687EA7"/>

    <fa:ImageAwesome Icon="WindowClose" x:Key="ForumCloseIcon" Width="20" Foreground="#FF687EA7"/>

    <SolidColorBrush Color="#FF687EA7" x:Key="BarFont"></SolidColorBrush>
    <SolidColorBrush Color="#353535" x:Key="HeaderBackground"></SolidColorBrush>
    <SolidColorBrush Color="#242424" x:Key="RowBackground"></SolidColorBrush>
    <SolidColorBrush Color="#ffaeaeae" x:Key="DataGridBorder"></SolidColorBrush>
    <SolidColorBrush Color="#ffaeaeae" x:Key="DataGridForeground"></SolidColorBrush>

    <BitmapImage x:Key="Logo" UriSource="/Resources/Icons/Guest1/travel-tour-logo-dark.png" />
    <SolidColorBrush Color="#1c1c1c" x:Key="FirstGrayShade"></SolidColorBrush>
    <SolidColorBrush Color="#242424" x:Key="SecondGrayShade"></SolidColorBrush>
    <SolidColorBrush Color="#0c181f" x:Key="BlueShade"></SolidColorBrush>
    <SolidColorBrush Color="#353535" x:Key="BarShade"></SolidColorBrush>
    <SolidColorBrush Color="#ffaeaeae" x:Key="TextboxColor"></SolidColorBrush>
    <SolidColorBrush Color="#ffaeaeae" x:Key="FontsColor"></SolidColorBrush>
    <SolidColorBrush Color="#1c1c1c" x:Key="DataGridBackground"></SolidColorBrush>
    <SolidColorBrush Color="#1c1c1c" x:Key="ListViewBackground"></SolidColorBrush>

    <Style TargetType="DataGrid" x:Key="DataGridStyle">
        <Setter Property="FontFamily" Value="Bahnschrift"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Background" Value="#1c1c1c"/>
        <Setter Property="CanUserResizeColumns" Value="False"/>
        <Setter Property="CanUserResizeRows" Value="False"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="HorizontalGridLinesBrush" Value="#f0f0f0"/>
        <Setter Property="VerticalGridLinesBrush" Value="#f0f0f0"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <Style TargetType="DataGridColumnHeader" x:Key="DataGridHeader">
        <Setter Property="Background" Value="#353535"/>
        <Setter Property="Foreground" Value="#ebf5ff"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="BorderThickness" Value="0.5"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Height" Value="20"/>
    </Style>

    <Style TargetType="DataGridRow" x:Key="DataGridRow">
        <Setter Property="Background" Value="#242424"/>
        <Setter Property="Foreground" Value="#353535"/>
        <Setter Property="BorderBrush" Value="#ffaeaeae"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style TargetType="DataGridCell" x:Key="DataGridCell">
        <Setter Property="Focusable" Value="False"/>
    </Style>

    <Style TargetType="ListViewItem" x:Key="ListViewItem">
        <Setter Property="Background" Value="#1c1c1c"/>
        <Setter Property="BorderBrush" Value="#ffaeaeae"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="#ffaeaeae"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontFamily" Value="Bahnschrift"/>
    </Style>

    <Style x:Key="FocusControl">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Margin="0" StrokeThickness="1.5" Stroke="#ebf5ff" StrokeDashArray="3 2"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>