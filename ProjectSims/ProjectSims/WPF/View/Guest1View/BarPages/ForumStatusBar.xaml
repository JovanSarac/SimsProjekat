<Page x:Class="ProjectSims.WPF.View.Guest1View.BarPages.ForumStatusBar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectSims.WPF.View.Guest1View.BarPages"
      mc:Ignorable="d" 
      d:DesignHeight="20" d:DesignWidth="700"
      Title="ForumStatusBar">

    <Grid Background="{DynamicResource BarShade}">
