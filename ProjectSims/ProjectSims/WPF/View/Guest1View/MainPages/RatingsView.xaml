<Page x:Class="ProjectSims.WPF.View.Guest1View.MainPages.RatingsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectSims.WPF.View.Guest1View.MainPages"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="1067"
      Title="RatingsView">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Button Margin="10,10,1000,80" Click="Back_Click">Nazad</Button>
        </Grid>

        <Grid Grid.Row="1">
            <TabControl Margin="50,10">
                <TabItem Header="Moji utisci">
                    <Grid Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="350"/>
                        </Grid.ColumnDefinitions>

                        <DataGrid Grid.Column="0" Margin="20,50,20,10"
                                  ItemsSource="{Binding MyRatings, UpdateSourceTrigger=PropertyChanged}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Naziv smestaja" Width="*"></DataGridTextColumn>
                                <DataGridTextColumn Header="Cistoca" Width="70"></DataGridTextColumn>
                                <DataGridTextColumn Header="Korektnost vlasnika" Width="120"></DataGridTextColumn>
                                <DataGridTextColumn Header="Lokacija" Width="70"></DataGridTextColumn>
                                <DataGridTextColumn Header="Vrednost za novac" Width="120"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Grid Grid.Column="1">
                            <TextBox Margin="30,100,30,10"></TextBox>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem Header="Utisci vlasnika">
                    <Grid Background="White">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="350"/>
                        </Grid.ColumnDefinitions>

                        <DataGrid Grid.Column="0" Margin="20,50,20,10"
                                  ItemsSource="{Binding OwnerRatings, UpdateSourceTrigger=PropertyChanged}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Cistoca" Width="130"></DataGridTextColumn>
                                <DataGridTextColumn Header="Postovanje pravila" Width="150"></DataGridTextColumn>
                                <DataGridTextColumn Header="Komunikacija" Width="150"></DataGridTextColumn>
                                <DataGridTextColumn Header="Urednost" Width="*"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Grid Grid.Column="1">
                            <TextBox Margin="30,100,30,10"></TextBox>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>

        </Grid>
    </Grid>
</Page>
